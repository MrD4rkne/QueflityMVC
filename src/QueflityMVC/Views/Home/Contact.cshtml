@using Microsoft.AspNetCore.Mvc.TagHelpers
@model QueflityMVC.Application.ViewModels.Other.MessageVm

@{
    ViewData["Title"] = "Contact";
}

<form asp-action="Contact" asp-controller="Home">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="card mb-3">
        <div class="row g-0">
            @Html.HiddenFor(model => model.Product.Id)
            <div class="col-md-auto">
                <img class="img-fluid rounded-start" src="@Model.Product.Image.FileUrl" alt="@Model.Product.Image.AltDescription" style="max-height: 200px"/>
                @Html.HiddenFor(model => model.Product.Image.FileUrl)
                @Html.HiddenFor(model => model.Product.Image.AltDescription)
            </div>
            <div class="col-md">
                <div class="card-body">
                    <div class="row">
                        <h4 class="card-title">@Html.DisplayFor(model => model.Product.Name)</h4>
                        @Html.HiddenFor(model => model.Product.Name)
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <dl style="width:fit-content;">
                                <dt class="col-sm">
                                    Price
                                </dt>
                                <dd class="col-sm">
                                    @Html.DisplayFor(model => model.Product.Price)
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <h3>Contact us!</h3>

    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input type="text" class="form-control" asp-for="Title"></input>
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Message" class="control-label"></label>
        <textarea class="form-control" asp-for="Message"></textarea>
        <span asp-validation-for="Message" class="text-danger"></span>
    </div>
    <div class="form-group" style="margin: 5px">
        <input type="submit" value="Save" class="btn btn-primary"/>
    </div>
</form>