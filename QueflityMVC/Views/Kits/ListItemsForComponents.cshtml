@model QueflityMVC.Application.ViewModels.Item.ListItemsForComponentsVM

@{
    ViewData["Title"] = "List";
    int[] options = new int[] { 2, 5, 10, 25, 50, 100 };
}

@if (Model.KitDetailsVM is not null)
{
    <partial name="_KitDetailsPartial" model="@Model.KitDetailsVM" />
}

<hr />

<h4>Items</h4>
<h7>Below you can see all available items</h7>

<form asp-action="ListItemsForComponents" asp-controller="Kits" method="post">
    <ul class="nav gap-1">
        <li class="nav-item">
            <input type="text" class="form-control" placeholder="Search Phrase" asp-for="NameFilter" name="nameFilter" id="nameFilter" />
        </li>
        <li class="nav-item">
            <button type="submit" class="btn btn-secondary">Search</button>
        </li>
        <li class="nav-item">
            <select class="form-select" asp-for="Pagination.Info.PageSize" onchange="javascript:PageSizeSelected()">
                @foreach (int i in options)
                {
                    @if (i == Model.Pagination.PageSize)
                    {
                        <option value="@i" selected>@i</option>
                    }
                    else
                    {
                        <option value="@i">@i</option>
                    }
                }
            </select>
        </li>
    </ul>
    @Html.HiddenFor(x=>x.SetId)
    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th></th>
                    <th>
                        Name
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Pagination.Entities)
                {
                    <tr>
                        <td>
                            @if (item.Image != null)
                            {
                                <img src="@item.Image.FileUrl" alt="@item.Image.AltDescription" style="height:30px" />
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @if (Model.KitComponentsIds is not null && Model.KitComponentsIds.Contains(item.Id))
                            {
                                @Html.ActionLink("Edit membership", "EditMembership", new { setId = Model.SetId, itemId = item.Id }, new { @class = "btn btn-outline-secondary btn-sm" });
                            }
                            else
                            {
                                @Html.ActionLink("Add to set", "AddComponent", new { setId = Model.SetId, itemId = item.Id }, new { @class = "btn btn-outline-primary btn-sm" });
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
    <div class="row">
        <input type="hidden" asp-for="Pagination.Info.CurrentPageNo" />
        <partial name="_PaginationPartial" model="@Model.Pagination.Info" />
    </div>
</form>

@section Scripts
    {
    <script type="text/javascript">
        function PageSizeSelected() {
            document.forms[0].submit();
        }
    </script>
}
