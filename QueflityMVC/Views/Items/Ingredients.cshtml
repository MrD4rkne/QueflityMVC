@model QueflityMVC.Application.ViewModels.Item.ItemIngredientsSelectionVM

@{
    ViewData["Title"] = "Ingredients";
}
<form asp-action="Ingredients" enctype="multipart/form-data">
    <h1>Item</h1>
    <input type="hidden" asp-for="Item.Id" value="@Model.Item.Id"/>
    <div class="card" style="width: 18rem;">
        <img src="@Model.Item.Image?.FileUrl" class="card-img-top" alt="@Model.Item.Image?.AltDescription">
        <div class="card-body">
            <h5 class="card-title">@Model.Item.Name</h5>
            @Html.ActionLink("Edit item", "Edit", new { id = Model.Item.Id }, new { @class = "btn btn-primary"})
        </div>
    </div>
    
    <div class="row justify-content-start" style="margin-top:40px">
        <div class="col-auto">
            <h2>Ingredients</h2>
        </div>
        <div class="col-auto">
            <input type="submit" class="btn btn-primary btn-lg" value="Save ingredients" />
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">
                    Does item contain
                </th>
                <th scope="col">
                    Name
                </th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.AllIngredients.Count; i++)
            {
                var item = Model.AllIngredients[i];
                <tr>
                    <th scope="row">
                        <input class="form-check-input" asp-for="AllIngredients[i].IsSelected" type="checkbox" checked="@(Model.SelectedIngredients.Contains(item.Id)?"checked":null)">
                        <input class="form-check-input" asp-for="AllIngredients[i].Id" type="hidden" value="@item.Id">
                        <input class="form-check-input" asp-for="AllIngredients[i].Name" type="hidden" value="@item.Name">
                    </th>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                </tr>
            }
        </tbody>
    </table>

</form>
